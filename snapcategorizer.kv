<PopupMenu>
    orientation: 'vertical'
    id:popup_menu
    popup_text: ['btn4','4','コリコリ']
    title:root.popup_text[0]

    TextInput:
        id: input2
        input_filter: 'int'
        input_type: 'number'
        text: root.popup_text[1]
        multiline:False

    TextInput:
        id: input3
        input_type: 'text'
        text: root.popup_text[2]
        multiline:False

    Button:
        text: 'Save&Close'
        on_release: 
            root.update_setting(root.popup_text[0], input2.text, input3.text)
            root.popup_close()

