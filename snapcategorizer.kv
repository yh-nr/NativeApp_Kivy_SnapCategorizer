<ButtonAddFixMenu>
    orientation: 'vertical'
    # id:buttonaddfix_menu
    popup_text: ['btn4','4','コリコリ']
    title:root.popup_text[0]

    # TextInput:
    #     id: input2
    #     input_filter: 'int'
    #     input_type: 'number'
    #     text: root.popup_text[1]
    #     multiline:False

    TextInput:
        id: input3
        input_type: 'text'
        text: root.popup_text[2]
        multiline:False

    Button:
        text: 'Save&Close'
        on_release: 
            root.update_setting(root.popup_text[0], root.popup_text[1], input3.text)
            root.popup_close()




<ConfirmDeleteMenu>
    orientation: 'vertical'
    # id:confirmdelete_menu
    btn_num: 1
    title: '確認'

    Label:
        text: '削除しますか？'
    BoxLayout:
        Button:
            id: input3
            input_type: 'text'
            text: 'DELETE'
            on_release: 
                root.delete_setting(root.btn_num)
                root.popup_close()

        Button:
            text: 'CANCEL'
            on_release:root.popup_close()



<LoadJsonMenu>
    orientation: 'vertical'
    # id:confirmdelete_menu
    btn_num: 1
    title: 'JSONファイルを選択'

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            filters: ['*.json']
            id: filechooser
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.popup_close()
            Button:
                text: "Load"
                on_release: 
                    root.load(filechooser.path, filechooser.selection)
                    root.popup_close()
